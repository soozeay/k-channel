<% if @user.followings.present? %>
  <% follow_users.each do |f|%>
    <% follow_user = User.find(f.id) %>
    <div class="partner-box">
      <%= link_to user_path(f.id), class: "room" do %>
        <div class="img-box">
          <% if follow_user.avatar.attached? %>
            <%= image_tag(rails_blob_path(follow_user.avatar), size: "35x35", class: "img-circle") %>
          <% else %>
            <%= image_tag("default_user.png", size: "35x35", class: "img-circle") %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="follow-user-name">
      <%= follow_user.nickname + "さん" %>
    </div>
    <div class="follow-user-info">
      <%= follow_user.intro %>
    </div>
  <% end %>
<% else %>
  <%= 'フォローしているユーザーはいません' %>
<% end %>