<%= render "shared/second-header"%>
<%= form_with model:@user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h4 class='form-header-text'>
      회원 정보 입력
    </h4>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        메일 주소 <span class="indispensable">필수</span>
        </label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"[예] aaaa@example.com", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        비밀번호 <span class="indispensable">필수</span>
      </label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "로그인" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>