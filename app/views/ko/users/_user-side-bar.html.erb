  <div class="category-list", id="js-accordion-nav">
    <ul class="plaza-list"><span class="js-category-bar"><%= link_to "", class:"accordion-nav" do %><i class="fas fa-bars"></i></span><% end %>
      <p class="plaza-header">더 본다</p>
      <li class="plaza-name", style="display: none;"><%= link_to "", class:"tab-nav-item is-active", data: {nav: "0"} do %><%= '투고' %><% end %></li>
      <li class="plaza-name", style="display: none;"><%= link_to "", class:"tab-nav-item", data: {nav: "1"} do %><%= "팔로우" %><% end %></li>
      <li class="plaza-name", style="display: none;"><%= link_to "", class:"tab-nav-item", data: {nav: "2"} do %><%= "팔로워" %><% end %></li>
