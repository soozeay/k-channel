<% if I18n.locale.to_s == "ja"%>
  <%= render "shared/second-header"%>
  <%= form_with model:@user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h4 class='form-header-text'>
          会員情報入力
        </h4>
      </div>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">
            メールアドレス <span class="indispensable">必須</span>
            </label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">
            パスワード <span class="indispensable">必須</span>
          </label>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "ログイン" ,class:"register-red-btn" %>
      </div>
      <div class="form-group">
        <div class='reset-password'>
        <%=  link_to 'パスワードをお忘れの方はこちら', new_user_password_path %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%# 韓国語は下記のビューを表示する %>
  <%= render "ko/devise/sessions/new" %>
<% end %>