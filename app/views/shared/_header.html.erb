<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
  <%= link_to image_tag("furima-logo-color.png", class:"kch-icon"), root_path %>
    <ul class='lists-left'>
      <li><%= link_to '広場一覧', "#", class: "category-list" %></li>
      <li><%= form_with(url: search_articles_path, local: true, class:"search-form") do |f| %>
            <%= f.text_field :keyword, placeholder: 'キーワードから探す', class:'input-box' %>
            <div class="search-button">
                <%= image_submit_tag("search.png" ,class:"search-icon") %>
            </div>
          <% end %>
      </li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to 'マイページ', user_path(current_user), class: "user-nickname" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>